<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctlBackground1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dlsugrey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlBackground2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/dlsugrey"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tvEditSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Subject"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditTitle" />

        <EditText
            android:id="@+id/etEditSubject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Title..."
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditSubject" />

        <TextView
            android:id="@+id/tvEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEditTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Title..."
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditTitle" />

        <TextView
            android:id="@+id/tvSType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Subject Type"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditSubject" />

        <RadioGroup
            android:id="@+id/rbEditSubjectType"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSType">

            <RadioButton
                android:id="@+id/rbEditLC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="LC"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/rbEditMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="Major"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/rbEditGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="GE"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="italic" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvEditDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rbEditSubjectType" />

        <EditText
            android:id="@+id/etEditDescription"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Description..."
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditDescription" />

        <TextView
            android:id="@+id/tvEditDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Due Date"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditDescription" />

        <Button
            android:id="@+id/btnEditDueDate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Due Day"
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditDue" />

        <Button
            android:id="@+id/btnEditDueTime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Due Time"
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnEditDueDate"
            app:layout_constraintTop_toBottomOf="@+id/tvEditDue" />

        <TextView
            android:id="@+id/tvEditDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Difficulty"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEditDueDate" />

        <RadioGroup
            android:id="@+id/rbEditDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditDifficulty">

            <RadioButton
                android:id="@+id/rbEditEasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="Easy"
                android:textColor="#F6F6F6"
                android:textSize="21sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/rbEditMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="Medium"
                android:textColor="#F6F6F6"
                android:textSize="21sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/rbEditHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:buttonTint="@color/dlsugreen"
                android:text="Hard"
                android:textColor="#F6F6F6"
                android:textSize="21sp"
                android:textStyle="italic" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvEditAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:text="Alarm Day/Time"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rbEditDifficulty" />

        <Button
            android:id="@+id/btnEditAlarmDate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Day to Alarm"
            android:inputType="datetime"
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditAlarm" />

        <Button
            android:id="@+id/btnEditAlarmTime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#C6F0BC"
            android:ems="10"
            android:hint="Enter Time to Alarm"
            android:textColor="#000000"
            android:textColorHint="#646464"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnEditAlarmDate"
            app:layout_constraintTop_toBottomOf="@+id/tvEditAlarm" />

        <Button
            android:id="@+id/btnEditCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:background="#5CB188"
            android:text="CANCEL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEditAlarmDate" />

        <Button
            android:id="@+id/btnEditTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:background="#5CB188"
            android:text="Edit Todo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEditAlarmDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>